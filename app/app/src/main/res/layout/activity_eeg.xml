<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main"
    tools:context=".EegActivity" >

    <include layout="@layout/content_header" />

    <!-- EEG headset data display layout -->

    <TextView
        android:id="@+id/tv_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:text="TextView" />

    <Button
        android:id="@+id/controlEegBtn"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@id/tv_attention"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_eegcontrol_start"
        android:textSize="35dp"
        android:textColor="#fff"
        android:text="@string/start"
        android:fontFamily="@font/nunito_extrabold" />

</RelativeLayout>
